<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/backgroundColor">

    <!-- Greeting and Icons Row -->
    <RelativeLayout
        android:id="@+id/greetingRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <!-- Greeting Text -->
        <TextView
            android:id="@+id/greetingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✌️ Hey George!"
            android:gravity="start"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"/>

        <!-- Icons (Search and Notification) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="end"
            android:layout_gravity="end">

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/search_icon"
                android:layout_gravity="end"
                app:tint="@color/black"
                android:layout_marginEnd="16dp"/>

            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/notification_icon"
                app:tint="@color/black"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- Credit Card Section -->
    <LinearLayout
        android:id="@+id/cardLayout"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="16dp"
        android:elevation="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greetingRow"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="**** 3854"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Date 10th Oct"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$5,001.86"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-bold"
            android:layout_marginBottom="8dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAY"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:elevation="4dp"/>
    </LinearLayout>

    <!-- Bill Payments Section Title -->
    <TextView
        android:id="@+id/billPaymentsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill Payments"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardLayout"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Bill Payment Icons Row -->
    <LinearLayout
        android:id="@+id/billPaymentsIcons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/billPaymentsTitle">

        <!-- Bill Payment Icon Example (Repeat for each icon) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_electricity"
                app:tint="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electricity Bill"
                android:textSize="12sp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Active Loans Section Title -->
    <TextView
        android:id="@+id/activeLoansTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active Loans"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/billPaymentsIcons"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Active Loans Details Card -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="@drawable/loan_card_background"
        android:padding="16dp"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/activeLoansTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$399/M"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"/>

        <ProgressBar
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="2"
            android:progress="48"
            android:progressTint="@color/primaryColor"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bottom_nav_background"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Icons for Bottom Navigation Bar -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_home"
            app:tint="@color/black"
            android:layout_marginEnd="32dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/search_icon"
            app:tint="@color/black"
            android:layout_marginEnd="32dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/wallet"
            app:tint="@color/black"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

